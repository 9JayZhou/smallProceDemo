.constios{
    width: 100%;
    height: auto;
    overflow: auto;
    border: 1px solid pink;
    box-shadow: 2rpx 5rpx 5rpx orange;
}
.user{
    height: 120rpx;
    margin-top: 10rpx;
    display: flex;
    align-content: center;
    border-bottom: 1rpx solid #b4b4b4;
}
.user-headport{
 width: 100rpx;
 height: 100rpx;
 border-radius: 100rpx;
 overflow: hidden;
 border: 2rpx solid orange;
}
.user-text{
    font-size: 36rpx;
    margin-left: 50rpx;
    line-height: 100rpx;
}
.content{
    margin-top: 50rpx;
    width: 100%;
    height: auto;
    display: flex;
    flex-direction: column;
    justify-content: space-around;
}
.cont-time{
 margin-left: 50rpx;
}
.cont-neirong{
    text-indent: 30rpx;
    letter-spacing: 3rpx;
